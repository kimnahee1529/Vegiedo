<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vegiedo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <userReviewItem name="colorPrimary">@color/purple_500</userReviewItem>
        <userReviewItem name="colorPrimaryVariant">@color/purple_700</userReviewItem>
        <userReviewItem name="colorOnPrimary">@color/white</userReviewItem>
        <!-- Secondary brand color. -->
        <userReviewItem name="colorSecondary">@color/teal_200</userReviewItem>
        <userReviewItem name="colorSecondaryVariant">@color/teal_700</userReviewItem>
        <userReviewItem name="colorOnSecondary">@color/black</userReviewItem>
        <!-- Status bar color. -->
        <userReviewItem name="android:statusBarColor">#FFFFFF</userReviewItem>
        <!-- Customize your theme here. -->
        <!-- 상단바 없애기 -->
        <userReviewItem name="windowNoTitle">true</userReviewItem>
        <!-- 시스템바를 백그라운드에 그린다.-->
        <userReviewItem name="android:windowDrawsSystemBarBackgrounds">true</userReviewItem>
<!--        <userReviewItem name="windowActionBar">false</userReviewItem>-->
        <userReviewItem name="android:windowLightStatusBar">true</userReviewItem>

    </style>
</resources>
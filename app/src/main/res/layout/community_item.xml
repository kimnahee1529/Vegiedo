<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="13dp">

    <ImageView
        android:id="@+id/community_image1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배고프다"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/community_image1"
        app:layout_constraintTop_toTopOf="@id/community_image1" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="[2]"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/title1"
        app:layout_constraintBaseline_toBaselineOf="@id/title1" />

    <TextView
        android:id="@+id/post_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아기 염소"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/community_image1"
        app:layout_constraintTop_toBottomOf="@id/title1" />

    <TextView
        android:id="@+id/content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="·"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/post_user_name"
        app:layout_constraintBaseline_toBaselineOf="@id/post_user_name" />

    <TextView
        android:id="@+id/post_created_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2045.06.07"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/content2"
        app:layout_constraintBaseline_toBaselineOf="@id/content2" />

    <TextView
        android:id="@+id/content4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="·"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/post_created_time"
        app:layout_constraintBaseline_toBaselineOf="@id/post_created_time" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_heart"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@+id/post_user_name"
        app:layout_constraintBottom_toBottomOf="@+id/post_user_name"
        app:layout_constraintStart_toEndOf="@+id/content4" />

    <TextView
        android:id="@+id/post_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="56"
        android:layout_marginStart="3dp"
        app:layout_constraintBaseline_toBaselineOf="@id/post_user_name"
        app:layout_constraintStart_toEndOf="@+id/heart" />

    <View
        android:id="@+id/gray_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/gray_line_n"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_user_name" />

</androidx.constraintlayout.widget.ConstraintLayout>

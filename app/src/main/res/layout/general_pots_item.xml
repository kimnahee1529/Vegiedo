<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/generalPost_main_image"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/generalPost_posting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/generalPost_main_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/generalPost_review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/generalPost_posting_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/generalPost_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/generalPost_main_image"
        app:layout_constraintTop_toBottomOf="@+id/generalPost_posting_name" />


    <ImageView
        android:id="@+id/generalPost_dot_icon1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@+id/generalPost_user_name"
        app:layout_constraintTop_toBottomOf="@+id/generalPost_posting_name" />


    <TextView
        android:id="@+id/generalPost_posting_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/generalPost_dot_icon1"
        app:layout_constraintTop_toBottomOf="@+id/generalPost_posting_name" />

    <ImageView
        android:id="@+id/generalPost_dot_icon2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@+id/generalPost_posting_date"
        app:layout_constraintTop_toBottomOf="@+id/generalPost_posting_name" />


    <ImageView
        android:id="@+id/generalPost_heart_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@+id/generalPost_dot_icon2"
        app:layout_constraintTop_toBottomOf="@+id/generalPost_posting_name" />

    <TextView
        android:id="@+id/generalPost_heart_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/generalPost_heart_image"
        app:layout_constraintTop_toBottomOf="@+id/generalPost_posting_name" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/img_sheep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315"/>

    <TextView
        android:id="@+id/tt_select_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_three_or_more"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495"/>

    <TextView
        android:id="@+id/select_tag_nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hey_rabbit"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46"
        tools:layout_editor_absoluteX="-2dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.287">

            <ToggleButton
                android:id="@+id/tag_fruittarian"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_vegan_bakery"
                android:textOn="@string/tag_vegan_bakery"/>

            <ToggleButton
                android:id="@+id/tag_vegan"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_all_vegan"
                android:textOn="@string/tag_all_vegan"/>

            <ToggleButton
                android:id="@+id/tag_lacto"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_lacto"
                android:textOn="@string/tag_lacto"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.444">

            <ToggleButton
                android:id="@+id/tag_ovo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_ovo"
                android:textOn="@string/tag_ovo"/>

            <ToggleButton
                android:id="@+id/tag_lacto_ovo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_lacto_ovo"
                android:textOn="@string/tag_lacto_ovo"/>

            <ToggleButton
                android:id="@+id/tag_pesca"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_pescatarian"
                android:textOn="@string/tag_pescatarian"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.129">

            <ToggleButton
                android:id="@+id/tag_pollo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_pollo"
                android:textOn="@string/tag_pollo"/>

            <ToggleButton
                android:id="@+id/tag_keto"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_keto"
                android:textOn="@string/tag_keto"/>

            <ToggleButton
                android:id="@+id/tag_gluten"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle"
                android:checked="false"
                android:textColor="@drawable/btn_togle_text_color"
                android:textOff="@string/tag_gluten_free"
                android:textOn="@string/tag_gluten_free"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        tools:layout_editor_absoluteY="666dp"/>

    <TextView
        android:id="@+id/tt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음에 선택하기"
        android:textColor="#999999"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="40dp"
        tools:layout_editor_absoluteY="666dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
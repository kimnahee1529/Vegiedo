<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/store_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        android:foregroundGravity="center"
        >
        <ImageView
            android:id="@+id/store_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            >
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/store_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/storeName"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_card"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <TextView
        android:id="@+id/store_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/storeTag"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/store_name">
    </TextView>
    <TextView
        android:id="@+id/store_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/storeTag"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/store_name"
        app:layout_constraintLeft_toRightOf="@+id/store_tag1"></TextView>
   /TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
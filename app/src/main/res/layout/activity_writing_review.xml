    <!-- 사진 텍스트뷰 위치 조정 -->
    <RatingBar
        android:id="@+id/map_ratingbar_star"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:numStars="5"
        android:progressTint="@color/yellow_star"
        android:stepSize="1.0"
        app:layout_constraintStart_toEndOf="@+id/ratingText"
        app:layout_constraintTop_toBottomOf="@+id/StoreDetail_review_string_length" />

    <TextView
        android:id="@+id/imagetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="사진"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingText" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imagetext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/main_image2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_image"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/main_image3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_image2"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/main_image4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_image3"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/main_image5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_image4"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="57dp"
        android:layout_height="38dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/btn_green"
        android:text="완료"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>